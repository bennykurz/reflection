{
  "name": "n86io/reflection",
  "description": "Extends the PHP ReflectionClass, ReflectionMethod, ReflectionProperty, ReflectionFunction and ReflectionParameter with doc-comment parsing.",
  "license": "GPL-3.0+",
  "keywords": [
    "class",
    "method",
    "property",
    "reflection"
  ],
  "authors": [
    {
      "name": "Viktor Firus",
      "email": "viktor@neunzehn86.de"
    }
  ],
  "require": {
    "php": ">=7.0",
    "phpdocumentor/reflection-docblock": "^3.1",
    "phpdocumentor/type-resolver": "^0.2",
    "webmozart/assert": "^1.2"
  },
  "require-dev": {
    "codeclimate/php-test-reporter": "dev-master",
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "N86io\\Reflection\\": "src"
    }
  },
  "autoload-dev": {
    "N86io\\Reflection\\Tests\\Unit\\Stuff\\": "build/tests/unit/Stuff"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "scripts": {
    "test": [
      "@composer install",
      "./vendor/bin/phpunit -c build/tests/unit.xml --coverage-clover build/logs/clover.xml"
    ],
    "test-report": [
      "@test",
      "./vendor/bin/test-reporter"
    ]
  }
}
